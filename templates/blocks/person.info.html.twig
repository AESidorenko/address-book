<div class="card mb-2">
    <div class="card-header">Personal info</div>
    <div class="card-body">
        <div class="form-group row">
            <div class="col-sm-2">First name:</div>
            <div class="col-sm-10">{{ person.firstName }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">Last name:</div>
            <div class="col-sm-10">{{ person.lastName }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">Birthday:</div>
            <div class="col-sm-10">{{ person.birthday | date("d.m.Y") }}
            </div>
        </div>
    </div>
</div>